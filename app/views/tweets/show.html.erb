<% if !user_signed_in? %>
  <% if @tweet.user.is_active == false %>
    <%= "The User who has posted the tweet has temporarily suspended their account" %>
  <% else %>
    <%= render 'show' %>
  <% end %>
<% else %>
  <% if current_user.id != @tweet.user.id && @tweet.user.is_active == false %>
    <%= "The User who has posted the tweet has temporarily suspended their account" %>
  <% else %>
    <%= render 'show' %>
  <% end %>
<% end %>

