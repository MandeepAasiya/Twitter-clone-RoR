<section class="section">
  <div class="container">
    <div class="columns">
      <div style="display:flex; flex-direction:column">
        <h3 class="title is-4">Conversations</h3>
        <% @conversations.each do |conversation| %>
          <% if conversation.sender_id == current_user.id %>
            <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = User.find(conversation.sender_id) %>
          <% end %>
          <% unless current_user.id == recipient %>
            <div class="columns">
            <div class="column">
            <div class="inline-block">
            <div class="panel-block">
            <div style="justify-content: space-between;">
              <article class="media">
                <div class="media-left">
                  <figure class="image is-64x64">
                    <%= link_to image_tag(recipient.avatar_thumbnail), conversation_messages_path(conversation) %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong><%= link_to recipient.name, conversation_messages_path(conversation) %></strong><br>
                      <small><%= link_to "@"+recipient.username , conversation_messages_path(conversation) %> </small>
                    </p>
                  </div>
                </div>
              </article>
            </div>
            </div>
            </div>
            </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>